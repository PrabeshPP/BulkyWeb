@{
    ViewData["Title"] = "Delete Category";
}

@model Category
<form method="post">
    <input asp-for="Id" hidden/>
    <div class="border p-3  mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Category</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3 row p-1">
            <label asp-for="Name" class="p-0"></label>
            <input asp-for="Name" type="text" class="form-control" disabled/>
        </div>

        <div class="mb-3 row">
            <label asp-for="DisplayOrder" class="p-0"></label>
            <input asp-for="DisplayOrder" type="text" class="form-control" disabled />
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger rounded-2">Delete category</button>
            </div>
            <div class="col-6 text-end col-md-3">

                <a asp-controller="Category" asp-action="index" class="btn btn-outline-secondary border-3">
                    <i class="bi bi-caret-left-fill"></i>
                    Back To List
                </a>
            </div>
        </div>
    </div>
</form>
